{
    "name" : "Wiktionary Popup",
    "description" : "Sn√§lla funka",
    "version" : "1.0",
    "manifest_version" : 3,
    "background": {
        "service_worker" : "background.js"
    },
    "content_scripts" : 
    [{
        "matches": ["*://*/*"],
        "js":["content.js"],
        "css": ["main.css"]
    },
    {
        "matches": ["*://*/*"],
        "match_about_blank": true,
        "all_frames": true,
        "css": ["frame.css"]
    }],
    "action" : 
    {
        "default_icon": 
        {
            "16": "icons/icon16.png",   
            "24": "icons/icon24.png",   
            "32": "icons/icon32.png", 
            "64": "icons/icon64.png" 
        },
        "default_title": "Configure Wiktionary popup",  
        "default_popup": "config.html"  
    },
    "permissions" : ["activeTab", "scripting", "storage"],
    "host_permissions" : ["https://*/"]
  }